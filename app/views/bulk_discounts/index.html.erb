<h3><%= "#{@merchant.name}'s Bulk Discounts:" %></h3>
<% @merchant.bulk_discounts.each do |bulk_discount| %>
  <h5><%= "Bulk Discount ##{bulk_discount.id}" %></h5>
  <p><%= "Quantity Threshold: #{bulk_discount.quantity_threshold}" %></p>
  <p><%= "Percentage Discount: #{bulk_discount.percentage_discount}" %>
  <%= button_to "Delete Bulk Discount #{bulk_discount.id}", "/merchants/#{@merchant.id}/bulk_discounts/#{bulk_discount.id}", method: :delete%>
  </p>
<% end %>

<p><%= link_to "Create New Bulk Discount", new_merchant_bulk_discount_path(@merchant) %></p>